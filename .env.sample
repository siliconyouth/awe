# AWE Environment Variables Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# CLERK AUTHENTICATION (Required)
# ============================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Clerk URLs (Required for authentication flow)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Clerk Webhook Secret (Required for user sync)
# Get this from Clerk Dashboard → Webhooks → Your webhook endpoint
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection URL from Supabase or your provider
DATABASE_URL=postgresql://user:password@host:port/database?schema=public
# Direct connection URL (for migrations)
DATABASE_DIRECT_URL=postgresql://user:password@host:port/database?schema=public

# ============================================
# SUPABASE (Required for database)
# ============================================
# Get these from https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# REDIS CACHE (Optional but recommended)
# ============================================
# Upstash Redis for rate limiting and caching
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================
# AI SERVICES (Required for AI features)
# ============================================
# Anthropic API for Claude
ANTHROPIC_API_KEY=sk-ant-your-api-key

# OpenAI API (Optional - for additional AI features)
OPENAI_API_KEY=sk-your-openai-key

# ============================================
# WEB SCRAPING (Optional)
# ============================================
# Browserless for headless Chrome automation
BROWSERLESS_API_KEY=your-browserless-key
BROWSERLESS_URL=https://chrome.browserless.io

# ============================================
# MONITORING & CRON (Required for scheduled tasks)
# ============================================
# Secret for Vercel Cron jobs authentication
CRON_SECRET=your-random-cron-secret-string

# Webhook URL for notifications (Optional)
NOTIFICATION_WEBHOOK_URL=https://your-webhook-endpoint.com

# ============================================
# APPLICATION CONFIG (Optional)
# ============================================
# Node environment
NODE_ENV=production

# Application URL (Required for production)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Custom configuration
CUSTOM_KEY=your-custom-value

# ============================================
# DEVELOPMENT ONLY (Remove in production)
# ============================================
# Skip environment validation (development only)
SKIP_ENV_VALIDATION=false

# Debug mode
DEBUG=false