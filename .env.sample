# AWE Environment Variables Configuration
# Copy this file to .env.local (development) or .env.production (production)

# ============================================
# CLERK AUTHENTICATION (Required)
# ============================================
# Get these from https://dashboard.clerk.com
# Development: pk_test_... / sk_test_...
# Production: pk_live_... / sk_live_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Clerk URLs (Required for authentication flow)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/projects

# Clerk Webhook Secret (Required for user sync)
# Get this from Clerk Dashboard → Webhooks → Your webhook endpoint
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection URL from Supabase or your provider
DATABASE_URL=postgresql://user:password@host:port/database?schema=public
# Direct connection URL (for migrations)
DATABASE_DIRECT_URL=postgresql://user:password@host:port/database?schema=public

# ============================================
# SUPABASE (Required for database)
# ============================================
# Get these from https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# REDIS CACHE (Optional but recommended)
# ============================================
# Upstash Redis for rate limiting and caching
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ============================================
# VECTOR DATABASE (Optional for semantic search)
# ============================================
# Upstash Vector for AI-powered semantic search
# Get these from https://console.upstash.com/vector
UPSTASH_VECTOR_REST_URL=https://your-vector-instance.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your-vector-token

# ============================================
# AI SERVICES (Required for AI features)
# ============================================
# Anthropic API for Claude
ANTHROPIC_API_KEY=sk-ant-your-api-key

# OpenAI API (Optional - for additional AI features)
OPENAI_API_KEY=sk-your-openai-key

# ============================================
# WEB SCRAPING (Optional)
# ============================================
# Browserless for headless Chrome automation
BROWSERLESS_API_KEY=your-browserless-key
BROWSERLESS_URL=https://chrome.browserless.io

# ============================================
# MONITORING & CRON (Required for scheduled tasks)
# ============================================
# Secret for Vercel Cron jobs authentication
CRON_SECRET=your-random-cron-secret-string

# Webhook URL for notifications (Optional)
NOTIFICATION_WEBHOOK_URL=https://your-webhook-endpoint.com

# ============================================
# SEARCH (Optional but recommended)
# ============================================
# Algolia for resource search
NEXT_PUBLIC_ALGOLIA_APP_ID=your-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-search-key
ALGOLIA_ADMIN_KEY=your-admin-key
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=resources

# ============================================
# APPLICATION CONFIG (Required)
# ============================================
# Node environment (development | production)
NODE_ENV=production

# Application URL (Required for production)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# JWT Secret (min 32 chars)
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Vercel Edge Config for feature flags
EDGE_CONFIG=https://edge-config.vercel.com/...

# Feature toggles
FEATURE_WEBSOCKETS=true
FEATURE_MARKETPLACE=true
FEATURE_ENTERPRISE=false
FEATURE_AI_ANALYSIS=true

# ============================================
# MONITORING (Recommended for production)
# ============================================
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking
SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=sntrys_...

# ============================================
# DEVELOPMENT ONLY (Remove in production)
# ============================================
# Skip environment validation (development only)
SKIP_ENV_VALIDATION=false

# Debug mode
DEBUG=false

# Disable telemetry in production
NEXT_TELEMETRY_DISABLED=1