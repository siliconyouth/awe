{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm build",
  "outputDirectory": "apps/web/.next",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet -- apps/web packages",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "development": true
    }
  },
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "TURBO_TELEMETRY_DISABLED": "1"
  },
  "crons": [
    {
      "path": "/api/monitor/cron/hourly",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/monitor/cron/daily",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/monitor/cron/weekly",
      "schedule": "0 0 * * 0"
    }
  ],
  "functions": {
    "apps/web/app/api/monitor/cron/hourly/route.ts": {
      "maxDuration": 60
    },
    "apps/web/app/api/monitor/cron/daily/route.ts": {
      "maxDuration": 120
    },
    "apps/web/app/api/monitor/cron/weekly/route.ts": {
      "maxDuration": 180
    },
    "apps/web/app/api/monitor/run/route.ts": {
      "maxDuration": 60
    },
    "apps/web/app/api/scrape/route.ts": {
      "maxDuration": 30
    },
    "apps/web/app/api/**/*.ts": {
      "maxDuration": 10
    }
  }
}