{
  "name": "@awe/claude-companion",
  "version": "2.0.0",
  "description": "Intelligent companion for Claude Code - AI-powered project analysis, optimization, and setup automation",
  "main": "src/index.js",
  "bin": {
    "awe": "./bin/awe.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node tests/integration.test.js",
    "test:performance": "node tests/performance.test.js",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:quick": "node scripts/benchmark.js --quick",
    "encrypt": "npx dotenvx encrypt",
    "decrypt": "npx dotenvx decrypt",
    "genkey": "npx dotenvx genkey",
    "security:check": "awe config --security-status",
    "setup": "node scripts/setup.js",
    "validate": "node scripts/validate-setup.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "node scripts/build.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "sync": "node src/commands/sync.js",
    "scrape": "node scripts/scrape.js"
  },
  "keywords": [
    "claude-code",
    "ai",
    "project-analysis",
    "templates",
    "optimization",
    "automation",
    "cli",
    "companion",
    "context-engineering"
  ],
  "author": "AWE Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/awe-team/claude-companion.git"
  },
  "bugs": {
    "url": "https://github.com/awe-team/claude-companion/issues"
  },
  "homepage": "https://github.com/awe-team/claude-companion#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.2",
    "@supabase/supabase-js": "^2.39.0",
    "@xenova/transformers": "^2.15.0",
    "better-sqlite3": "^12.2.0",
    "boxen": "^7.1.1",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "config": "^3.3.9",
    "fast-levenshtein": "^3.0.0",
    "fs-extra": "^11.3.1",
    "glob": "^10.3.10",
    "hnswlib-node": "^3.0.0",
    "ignore": "^5.3.0",
    "inquirer": "^8.2.6",
    "lru-cache": "^10.1.0",
    "mime-types": "^2.1.35",
    "natural": "^6.7.0",
    "node-fetch": "^3.3.2",
    "ora": "^5.4.1",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "quick-lru": "^6.1.2",
    "semver": "^7.5.4",
    "simple-git": "^3.20.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "tmp": "^0.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "import/no-dynamic-require": "off",
      "global-require": "off"
    }
  },
  "files": [
    "src/",
    "bin/",
    "templates/",
    "database/",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
