{
  "name": "@awe/config",
  "version": "2.1.1",
  "description": "Comprehensive configuration system for AWE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup && node -e \"require('fs').writeFileSync('dist/index.d.ts', 'export * from \\'../src/index\\';')\"",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@awe/shared": "workspace:*",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.4.1",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/convict": "^6.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.10.0",
    "eslint": "^9.15.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}