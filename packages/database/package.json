{
  "name": "@awe/database",
  "version": "2.1.1",
  "description": "Database layer for AWE workspace with Prisma and Supabase",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "postinstall": "prisma generate",
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "env": "node ../../scripts/env-loader.js ../../.env.local",
    "db:generate": "npm run env 'prisma generate'",
    "db:push": "npm run env 'prisma db push'",
    "db:migrate": "npm run env 'prisma migrate dev'",
    "db:studio": "npm run env 'prisma studio'",
    "db:migrate:raw": "prisma migrate dev",
    "db:studio:raw": "prisma studio"
  },
  "dependencies": {
    "@awe/shared": "workspace:*",
    "@prisma/client": "^6.1.0",
    "@supabase/supabase-js": "^2.48.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "eslint": "^9.17.0",
    "prisma": "^6.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3"
  },
  "files": [
    "dist",
    "prisma"
  ]
}